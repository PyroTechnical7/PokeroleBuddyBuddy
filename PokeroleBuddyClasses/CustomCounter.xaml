<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeroleBuddyClasses.CustomCounter">
    <HorizontalStackLayout Padding="10" Spacing="5" VerticalOptions="Center">
        <Button Text="-" Clicked="OnDecrementClicked"/>
        <Label x:Name="NumberLabel" Text="0" FontSize="Large" HorizontalOptions="Center"/>
        <Button Text="+" Clicked="OnIncrementClicked"/>
    </HorizontalStackLayout>

</ContentView>
